{
  "name": "site-cv",
  "version": "1.0.0",
  "description": "Ce site est pour montrer mon CV et pour m'enseigner comment constuire un site en utilisant NPM",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "sass --style=compressed src/scss/index.scss dist/style.css",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss --custom-syntax postcss-scss",
    "construire:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "construire:images": "imagemin src/images/**/* --out-dir=dist/images",
    "construire:html": "posthtml -c posthtml.json",
    "construire:js": "webpack --mode=production",
    "executer:tout": "npm run construire:css && npm run construire:images && npm run construire:html && npm run constriure:js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.3",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "cssnano": "^7.0.5",
    "eslint": "^9.9.0",
    "eslint-webpack-plugin": "^4.2.0",
    "htmlnano": "^2.1.1",
    "imagemin-cli": "^8.0.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.1",
    "sass": "^1.77.8",
    "stylelint": "^16.8.1",
    "terser": "^5.31.5",
    "webpack-cli": "^5.1.4"
  },
  "author": "Kiyoshi Muka√Ø",
  "license": "ISC"
}
